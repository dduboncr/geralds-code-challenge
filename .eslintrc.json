{
	"env": {
		"node": true,
		"es6": true,
		"jest": true
	},
	"extends": ["prettier/@typescript-eslint"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"overrides": [
		{
			"files": ["src/**/*.{js,ts}"],
			"rules": {
				"no-unused-vars": "error",
				"no-undef": 1
			}
		}
	],
	"plugins": ["@typescript-eslint", "import"],
	"rules": {
		/* compat/compat is not needed for a server package */
		"compat/compat": "off",
		"no-param-reassign": "error",
		/* Turn off camelcase so that the TypeScript naming-convention rule can handle it. */
		"camelcase": "off",
		"no-console": "error",
		"no-unused-vars": "off",
		"@typescript-eslint/no-unused-vars": ["warn"]
	},
	"settings": {
		"import/resolver": {
			"typescript": true
		}
	}
}
